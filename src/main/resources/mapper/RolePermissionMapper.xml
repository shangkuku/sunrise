<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="rbk.sunrise.dao.RolePermissionMapper">
    <resultMap id="BaseResultMap" type="rbk.sunrise.entity.RolePermission">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="role_id" jdbcType="BIGINT" property="roleId"/>
        <result column="permission" jdbcType="VARCHAR" property="permission"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, role_id, permission
    </sql>
    <select id="getRolePermissionsByUserId" resultMap="BaseResultMap">
        SELECT rp.* FROM rbk_role_permission rp, rbk_user_role ur
        WHERE ur.user_id = #{userId}
        AND rp.role_id = ur.role_id
    </select>
</mapper>